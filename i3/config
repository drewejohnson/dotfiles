# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

## Manual management of external displays
# archlinux i3 page

set $mode_project Project display to (v) VGA ON, (h) HDMI ON, (x) VGA OFF, (y) HDMI OFF
# clones the current display to one of the targets
mode "$mode_project" {
	bindsym v exec --no-startup-id xrandr --output DP2 --auto, mode "default"
	bindsym h exec --no-startup-id xrandr --output HDMI1 --auto, mode "default"
	bindsym x exec --no-startup-id xrandr --output DP2  --auto --off, mode "default"
	bindsym y exec --no-startup-id xrandr --output HDMI1 --auto --off, mode "default"
# back to normal
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_project"

set $mode_extend Extend display to (v) VGA ON, (h) HDMI ON, (x) VGA OFF, (y) HDMI OFF
# extend the current display to one of the targets
mode "$mode_extend" {
	bindsym v exec --no-startup-id xrandr --output DP2 --auto --left-of eDP1, mode "default"
	bindsym h exec --no-startup-id xrandr --output HDMI1 --auto --left-of eDP1, mode "default"
	bindsym x exec --no-startup-id xrandr --output DP2  --auto --off, mode "default"
	bindsym y exec --no-startup-id xrandr --output HDMI1 --auto --off, mode "default"
# back to normal
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+Shift+p mode "$mode_extend"

# Switch back to previous workspace with the same command
workspace_auto_back_and_forth yes

## Window-specific options
for_window [class="^.*"] border pixel 0
for_window [class="feh"] floating enable
for_window [title="vimpc"] floating enable
for_window [title="Figure \d+"] floating enable

#
# Coloring
#
set_from_resource $bg i3wm.color0 #ff0000
set_from_resource $focused i3wm.color10 #ffffff
set_from_resource $unfcsed i3wm.color8 #0000ff
set_from_resource $inactiv i3wm.color8 #ff00ff
set_from_resource $indicat i3wm.color1 #ffff00
set_from_resource $text    i3wm.color15 #000000
set_from_resource $urgent  i3wm.color3 #ff0000

# class                 border  backgr. text    indicator child_border
client.focused          $focused $bg    $text   $indicat  $focused
client.focused_inactive $inactiv $bg    $text   $indicat  $inactiv
client.unfocused        $unfcsed $bg    $text   $indicat  $unfcsed
client.urgent           $urgent  $bg    $text   $indicat  $inactiv
client.placeholder      $inactiv $bg    $text   $indicat  $inactiv
client.background       $bg

#
# music control
#
set $mode_music Music: (h) prev, (l) next, (r) restart, (space) toggle, (s) stop, (v) vimpc
mode "$mode_music" {
    bindsym l exec --no-startup-id mpc next
    bindsym h exec --no-startup-id mpc prev
    bindsym space exec --no-startup-id mpc toggle, mode "default"
    bindsym r exec --no-startup-id mpc seek 0%, mode "default"
    bindsym s exec --no-startup-id mpc stop, mode "default"
    bindsym v exec st  -g 80X50 -e vimpc, mode "default"
    bindsym q mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+m mode "$mode_music"

bar {
    status_command i3status
}
