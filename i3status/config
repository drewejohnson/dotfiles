general {
    output_format = "i3bar"
    colors = true
    interval = 5
    color_good = "#00FF00"
    color_bad = "#FF0000"
}

order += "disk /"

disk / {
    low_threshold = 5
    threshold_type = "percentage_free"
    format = "%percentage_used / %percentage_avail"
    format_below_threshold = "Warning: %percentage_avail"
}

order += "wireless wlp3s0"

wireless wlp3s0 {
    format_up = "W: %essid %quality"
    format_down = "W: down"
}

order += "ethernet eth0"

ethernet eth0 {
    format_up = "E: %ip"
    format_down = "E: down"
}

order += "battery all"

battery all {
    status_chr = "︇"
    status_unk = " UNKNOWN"
    status_full = ""
    format = "%status %percentage %remaining"
    integer_battery_capacity = true
    low_threshold = 20
    threshold_type = "percentage"
    path = "/sys/class/power_supply/BAT%d/uevent"
    hide_seconds = true
}

order += "cpu_usage"

cpu_usage {
    format = " %usage"
    max_threshold = 75
}

order += "tztime local"

tztime local {
    format = "%H:%M %Y-%m-%d"
}
