[core]
    editor = vim
    excludesfile = ~/.gitignore
[gpg]
	program = gpg2
[commit]
	gpgsign = true
[init]
	templatedir = ~/.git_template
[alias]
    # Apply black formater to all tracked python files
    # No arguments
    black = !.git/hooks/black

    # Regenerate tag file at .git/tags
    # No arguments
    ctags = !.git/hooks/ctags

    # Run the flake8 on unified diff
    # Arguments are passed to git diff
    flake8 =  !.git/hooks/flake8

    # Pretty-fied one lined log
    ol = log --oneline --pretty='tformat:%C(yellow)%h%Creset %Cgreen[%an]%Creset %s %Cred(%cr)%Creset '
    # Onelined log graph
    og = log --graph --oneline --pretty='tformat:%C(yellow)%h%Creset %Cgreen[%an]%Creset %s'

    # Show author and title of single commit
    whatis = show -s --pretty='tformat:%C(yellow)%h%Creset %an: (%s, %ad)' --date=short
[diff "jupyternotebook"]
    command = git-nbdiffdriver diff
[merge "jupyternotebook"]
    driver = git-nbmergedriver merge %O %A %B %L %P
    name = jupyter notebook merge driver
[difftool "nbdime"]
    cmd = git-nbdifftool diff \"$LOCAL\" \"$REMOTE\" \"$BASE\"
[difftool]
    prompt = false
[mergetool "nbdime"]
    cmd = git-nbmergetool merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[mergetool]
    prompt = false
