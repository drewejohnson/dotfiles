[colors]
background = ${xrdb:color0:#708090}
i3-focused= ${xrdb:color4:#ffffff}
i3-unfocused= ${xrdb:color8:#0000ff}
i3-inactive= ${xrdb:color5:#ff00ff}
i3-urgent = ${xrdb:color15:#000000}

music = ${xrdb:color10:#00ff00}
status = ${xrdb:color15:#ffffff}
charging = #5acc77

music-full = #5acc77
music-empty = ${xrdb:color15}

[bar/main]
monitor = eDP1
bottom = false
fixed-center = true
height = 25
width = 100%
separator = 
modules-left = i3
modules-center = mpd 
modules-right = volume wlan eth battery1 battery2 cpu date powermenu
locale = en_US.UTF-8
tray-position = left
tray-detached = false
tray-maxsize = 16
border-top-size = 2
border-bottom-size = 2
background = ${colors.background}
foreground = ${colors.status}

module-margin-left = 1
module-margin-right = 2

font-0 = fixed
font-1 = unifont:fontformat=truetype:size=8:weight=bold:antialias=false;0
font-2 = Font Awesome 5 Free:style=Regular:pixelsize=12;0
font-3 = Font Awesome 5 Free:style=Solid:pixelsize=12;0
font-4 = Font Awesome 5 Brands:pixelsize=12;0

[bar/vga]
inherit = bar/main
monitor = DP2
modules-left = 
module-right = 
modules-center = i3

[global/wm]
margin-bottom = 5
margin-top = 5

[module/battery1]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC 
poll-interval = 10
format-charging =  <label-charging>
format-discharging =  <label-discharging>
format-charging-foreground= ${colors.charging}

[module/battery2]
type = internal/battery
full-at = 99
battery = BAT1
adapter = AC 
poll-interval = 10

format-charging =  <label-charging>
format-discharging =  <label-discharging>
format-charging-foreground = ${colors.charging}

[module/date]
type = internal/date
interval = 5.0

date = %b-%d
time = %I:%M
date-alt = %A, %b-%d
time-alt = %H:%M:%S
label = %date% %time%

[module/cpu]
type = internal/cpu
interval = 5
format-prefix = " "
label = "%percentage:2%%"


[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
label-connected = %downspeed%  %upspeed%
format-connected-prefix = " "
format-disconnected =

[module/eth]
interface = enp0s25
inherit = module/wlan
format-connected-prefix  =" "

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
pin-workspaces = true
index-sort = true
label-mode-padding = 2

; focused
label-focused = %index%
label-focused-foreground = ${colors.i3-focused}
label-focused-padding = 2

; unfocused
label-unfocused = %index%
label-unfocused-foreground= ${colors.i3-unfocused}
label-unfocused-padding = 2

; urgent
label-urgent-foreground= ${colors.i3-urgent}
label-urgent-padding = 2

[module/mpd]
type = internal/mpd
host = 127.0.0.1

format-online = <icon-prev> <toggle> <icon-next> <label-song> 
label-song = %artist% - %title%
label-song-maxlen = 30
label-song-ellipsis = true
icon-play = 
icon-pause = 
icon-next = 
icon-prev = 

format-offline = <label-offline>
label-offline = 

[module/volume]
type = internal/volume
format-volume = <ramp-volume>
format-muted = <label-muted>
label-muted = 
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/powermenu]
type = custom/menu

label-open = 
label-close = 
label-open-foreground = #BB4249
label-closed-foreground = ${module/powermenu.label-open-foreground}
label-separator = " "
format-spacing = 1

menu-0-0 = Lock 
menu-0-0-exec = i3lock -c 708090

